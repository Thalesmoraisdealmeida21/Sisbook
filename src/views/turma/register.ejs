      <label for="inputPassword4">Ano/Serie</label>
        <select name="year" id="inputAno2" class="form-control">
            <option>1 Ano</option>
            <option>2 Ano</option>
            <option>3 Ano</option>
        </select>
    </div>

  </div>

    <div class="form-group">
    <label for="turma">Observação</label>
    <textarea name="obs" type="text" class="form-control" id="obs" rows="7"></textarea></div>


  
  <button type="submit" class="btn btn-primary">Cadastrar Turma</button>
  <a href="/turmas">
