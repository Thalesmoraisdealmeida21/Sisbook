<%- include ./../layout/header %>

<div class="container">
<div class="card">
  <h5 class="card-header">Turmas</h5>
  <div class="card-body">


    <div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2 col-xs-12">
    
    </div>
    </div>

    <div class="row"></div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Serie</th>
                <th>Opções</th>
            </tr>
        </thead>



        <tbody>
      <% turmas.forEach((turma)=> { %>
            <tr>
                <td><%= turma.TR_ID %></td>
                <td><%= turma.TR_NAME%></td>
                <td><%= turma.TR_YEAR %> Ano</td>
                <td>    

                <a href="/turmas/update/<%= turma.TR_ID %>">
                <button class="btn  btn-sm btn-warning"> Editar </button>
                </a>

                 <a class="delete" href="/turmas/delete/<%= turma.TR_ID %>">
                    <button class="btn btn-sm btn-danger">Excluir</button>
                 </a>
                 <a href="#">
                    <button disabled class="btn btn-sm btn-primary">Alunos</button>
                 </a>
                </td>
            </tr>
             
             <% })%>

            
        </tbody>
    
       
    </table>
<div class="row">
<div class="col-9">
 <nav aria-label="">
  <ul id="ul-pages" class="pagination ">
  <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
              
    </nav>
</div>
    <div class="col-3">
    <a href="/turmas/register">
        <button class="btn btn-success ">Nova turma</button>
        </a>
    </div>


  
</div>

</div>
</div>
    



</div>

<script src="./../../js/pagination.js"></script>

<script src="./../../js/turma.js"></script>
<%- include ./../layout/footer %>


