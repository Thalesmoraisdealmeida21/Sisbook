<%- include ./../layout/header %>

<div class="container">
    <div class="card">

    <div class="card-header">
        <%= titlePanel   %>
        
    </div>
        <div class="card-body">
            <form method="post" action="/livros/save">

            <input type="hidden" name="id" value="<%= book[0].BK_ID %>">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label for="title">Titulo</label>
                        <input type="text" value="<%= book[0].BK_TITLE %>" name="title" class="form-control" id="title" placeholder="Titulo do Livro">
                        </div>
                        <div class="form-group col-md-6">
                        <label for="author">Autor</label>
                        <input type="text" name="author" value="<%= book[0].BK_AUTOR %>" class="form-control" id="author" placeholder="Autor">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="genre">Genero</label>
                        <input type="text" class="form-control" value="<%= book[0].BK_GENRE %>"name="genre" id="genre" placeholder="Escolha o genero do livro">
                    </div>
                    
                    <div class="form-group">
                        <label for="obs">Sinopse</label>
                        <textarea type="text" name="sinopse" class="form-control" id="sinopse"><%= book[0].BK_SINOPSE %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="obs">Observações</label>
                        <textarea type="text" name="obs" class="form-control" id="obs"><%= book[0].BK_OBS %></textarea>
                    </div>
                  
                  
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
             </form>
        </div>
    </div>

</div>


<%- include ./../layout/footer %>

          