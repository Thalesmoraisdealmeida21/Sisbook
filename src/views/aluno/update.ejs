<%- include ./../layout/header %>



 <div class="form-group">
    <button style="display: none" id="btnNewEstudent" class="btn btn-success"> Novo Aluno </button>
</div>

<div style="display: none" id="msgRegister"class="alert alert-success" role="alert">
  Parabéns !! Você cadastrou um usuario com sucesso
</div>

<div class="container">
    <form id="form-aluno-update" method="post">
        <div class="form-group">
        <label for="name">Nome do Aluno</label>
            <input value="<%= aluno.AL_NAME %>" type="text" id="name" name="name" class="form-control">
        </div>

        <div class="form-group">
          <label for="age">Idade</label>
            <input value="<%= aluno.AL_IDADE %>"type="number" name="age" id="age" class="form-control">
        </div>

        <div class="form-group">
        <label for="turma">Turma</label>
        <input id="turma_id" value="<%= aluno.AL_TURMA %>" type="hidden">
                <select readonly name="turma" class="custom select form-control" id="turma11">
                        
                </select>   
                 
        </div>        
            
     


        <div class="form-group">
        <label for="obs">Observação</label>
            <textarea class="form-control" name="obs" id="obs" cols="30" rows="5"><%= aluno.AL_OBS %></textarea>
        </div>
        </div>


    
      
      <div id="btnOptionsRegisterAlunos" class="container">
        <div class="row">
            <div class="col-md-2 col-xs-2">
            <button type="submit" class="form-control btn btn-success">Salvar</button>
            </div>
            
            <div class="col-md-2 col-xs-2">
            <a href="/alunos">
              <button type="button" class="form-control btn btn-warning">Voltar</button>
              </a>
            </div>
      </div>
     
      
      </div>
       
     
    


    
    </form>


</div>


<script src="./../../js/aluno.js"></script>



